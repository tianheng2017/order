<div class="layuimini-container">
    <form id="app-form" class="layui-form layuimini-form">
        
        <div class="layui-form-item">
            <label class="layui-form-label">行业ID</label>
            <div class="layui-input-block">
                <input type="text" name="industry_id" class="layui-input" lay-verify="required" placeholder="请输入行业ID" value="">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">行业名称</label>
            <div class="layui-input-block">
                <input type="text" name="industryname" class="layui-input" placeholder="请输入行业名称" value="">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">上级行业ID</label>
            <div class="layui-input-block">
                <input type="text" name="superiorid" class="layui-input" placeholder="请输入上级行业ID" value="0">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">级别</label>
            <div class="layui-input-block">
                {foreach $getIndustrylevelList as $k=>$v}
                <input type="radio" name="industrylevel" value="{$k}" title="{$v}" {in name="k" value=""}checked=""{/in}>
                {/foreach}
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">状态</label>
            <div class="layui-input-block">
                {foreach $getStatusList as $k=>$v}
                <input type="radio" name="status" value="{$k}" title="{$v}" {in name="k" value="0"}checked=""{/in}>
                {/foreach}
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">备注</label>
            <div class="layui-input-block">
                <input type="text" name="note" class="layui-input" placeholder="请输入备注" value="">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">排序</label>
            <div class="layui-input-block">
                <input type="text" name="sort" class="layui-input"  placeholder="请输入排序" value="0">
            </div>
        </div>
        <div class="hr-line"></div>
        <div class="layui-form-item text-center">
            <button type="submit" class="layui-btn layui-btn-normal layui-btn-sm" lay-submit>确认</button>
            <button type="reset" class="layui-btn layui-btn-primary layui-btn-sm">重置</button>
        </div>

    </form>
</div>