<style>
    .layui-word-aux{
        height: 36px;
        line-height: 36px;
        color: unset!important;
    }
</style>
<div class="layuimini-container">
    <form id="app-form" class="layui-form layuimini-form">
        
        <div class="layui-form-item">
            <label class="layui-form-label">用户uid</label>
            <div class="layui-input-block">
                <span class="layui-word-aux">{$row.uid|default=''}</span>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">登录方式</label>
            <div class="layui-input-block">
                {foreach $getLoginTypeList as $k=>$v}
                <input type="radio" name="login_type" value="{$k}" title="{$v}" {in name="k" value="$row.login_type"}checked=""{/in}>
                {/foreach}
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">操作类型</label>
            <div class="layui-input-block">
                {foreach $getCommandList as $k=>$v}
                <input type="radio" name="command" value="{$k}" title="{$v}" {in name="k" value="$row.command"}checked=""{/in}>
                {/foreach}
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">登录ip</label>
            <div class="layui-input-block">
                <input type="text" name="login_ip" class="layui-input" lay-verify="required" placeholder="请输入登录ip" value="{$row.login_ip|default=''}">
            </div>
        </div>
        <div class="hr-line"></div>
        <div class="layui-form-item text-center">
            <button type="submit" class="layui-btn layui-btn-normal layui-btn-sm" lay-submit>确认</button>
            <button type="reset" class="layui-btn layui-btn-primary layui-btn-sm">重置</button>
        </div>

    </form>
</div>